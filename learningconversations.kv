LearningConversationPupil:    #

<LearningConversationPupil>:    #

    orientation:    "vertical"  #

    learning_intention: intention_box
    success_yes: success_yes_button
    success_part: success_part_button
    success_no: success_no_button
    lesson_success: success_box
    next_steps: next_steps_box
    comments: comments_box

    BoxLayout:
        height: "40dp"
        size_hint_y: None
    BoxLayout:

        height: "40dp"
        size_hint_y: None

        Label:

            size_hint_x: 25

            text: "Today's Learning Intention"

        TextInput:

            id: intention_box
            size_hint_x: 60

        Label:
            size_hint_y: 15

    BoxLayout:

        height: "80dp"
        size_hint_y: None

        Label:

            size_hint_x: 25

            text: "Did you meet the \nlearning intention?"
        BoxLayout:
            size_hint_x: 60

            ToggleButton:
                id: success_yes_button
                text: "Yes"
                group: "success"

            ToggleButton:
                id: success_part_button
                text: "Partially"
                group: "success"

            ToggleButton:
                id: success_no_button
                text: "No"
                group: "success"

        Label:
            size_hint_y: 15
    BoxLayout:

        height: "80dp"
        size_hint_y: None

        Label:

            size_hint_x: 25

            text: "What was your biggest \nsuccess during the lesson?"

        TextInput:

            id: success_box

            size_hint_x: 60

        Label:
            size_hint_y: 15
    BoxLayout:

        height: "80dp"
        size_hint_y: None

        Label:

            size_hint_x: 25

            text: "What are your next steps?"

        TextInput:
            id: next_steps_box

            size_hint_x: 60

        Label:
            size_hint_y: 15
    BoxLayout:

        height: "80dp"
        size_hint_y: None

        Label:

            size_hint_x: 25

            text: "Do you have anything you'd like \nto discuss with the teacher?"

        TextInput:
            id: comments_box

            size_hint_x: 60

        Label:
            size_hint_y: 15

    BoxLayout:
        hint_height_y: 33

    BoxLayout:
        Label:

        Button:

            text: "Submit statement"

            on_press: root.add_record()
        Label:

        Button:


            text: "View other statements"

        Label:

    BoxLayout:
        hint_height_y: 33